<div class="header-blue">
  <h3><i class='glyphicon glyphicon-pencil'></i> Edit Account</h3>
</div>

<%= simple_form_for(current_user) do |f| %>
  <%= f.input :name, :input_html => { :class => :wd300 } %>
  <%= f.input :phone, :input_html => { :class => :wd300 } %>
  <%= f.input :email, :input_html => { :class => :wd300 } %>
  <div class='wd300'><p><i class='glyphicon glyphicon-info-sign'></i> To enable log in with Goolge, please provide Google account. Leave it blank if Google login is not needed </p></div>
  <%= f.input :gmail, :input_html => { :class => :wd300 } %>
  <%= f.input :username, :input_html => { :class => :wd300 } %>
  <%= recaptcha_tags %><br>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
