<div class="page-header">
  <h3><i class='glyphicon glyphicon-plus'></i> Add new visit</h3>
</div>
<%= simple_form_for([:admin,@visit]) do |f| %>
  <p><i class='glyphicon glyphicon-info-sign'></i> <i>Can't find the subject? <%= link_to "Add new one", new_admin_human_path %></i></p>
  <%= f.association :human, :input_html => { :class => :wd300 } %>
  <p><i class='glyphicon glyphicon-info-sign'></i> <i>Can't find the right visit type? <%= link_to "Add new one", new_admin_visit_type_path %></i></p>
  <%= f.association :visit_type, :input_html => { :class => :wd300 } %>
  <%= f.input :age, :input_html => { :class => :wd300 } %>
  <%= f.input :diagnosis, :input_html => { :class => :wd300 } %>
  <%= f.input :visit_date, :include_blank => true %>
  <%= f.input :note, :input_html => { :class => :wd300 } %>
  <%= recaptcha_tags %><br>

  <%= f.button :submit, :class => 'btn btn-primary' %>
<% end %>
