<div class="page-header">
  <h3><i class='glyphicon glyphicon-star'></i> Genders</h3>
  <p>Control access privileges</p>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>

    <% @genders.each do |gender| %>
      <tr>
        <td><%= gender.name %></td>
        <td><%= gender.note %></td>
        <td><%= link_to edit_admin_gender_path(gender.id) do %><span class='glyphicon glyphicon-pencil'></span><% end %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Add new gender', new_admin_gender_path, :class => 'btn btn-primary' %>
