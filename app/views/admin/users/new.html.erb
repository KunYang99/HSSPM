<div class="page-header">
  <h3><i class='glyphicon glyphicon-plus'></i> Add new member</h3>
</div>
<%= simple_form_for([:admin,@user]) do |f| %>
  <%= f.input :name, :input_html => { :class => :wd300 } %>
  <div class='wd300'><p><i class='glyphicon glyphicon-info-sign'></i> To enable log in with Goolge, please provide Google account. Leave it blank if Google login is not needed </p></div>
  <%= f.input :gmail, :input_html => { :class => :wd300 } %>
  <div class='wd300'><p><i class='glyphicon glyphicon-info-sign'></i> To enbale regular log in, please provide username and password. Leave username and password blank if regular log in is not needed </p></div>
  <%= f.input :username, :input_html => { :class => :wd300 } %>
  <%= f.input :password, :input_html => { :class => :wd300 } %>
  <%= f.input :password_confrim, :input_html => { :class => :wd300 } %>
  <%= f.input :email, :input_html => { :class => :wd300 } %>

  <%= f.association :groups, :as => :check_boxes, :checked => [2] %>
  <%= recaptcha_tags %><br>

  <%= f.button :submit, :class => 'btn btn-primary' %>
<% end %>
