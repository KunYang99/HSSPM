<div class="page-header">
  <h3><span class='glyphicon glyphicon-user'></span> Member Info</h3>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @user.name %></dd>
  <dt>Gmail Account</dt>
  <dd class="clearfix"><%= @user.gmail %></dd>
  <dt>Username</dt>
  <dd class="clearfix"><%= @user.username %></dd>
  <dt>Phone</dt>
  <dd class="clearfix"><%= @user.phone %></dd>
  <dt>Email</dt>
  <dd class="clearfix"><%= @user.email %></dd>
  <dt>Groups</dt>
  <dd><%= @user.to_groups %></dd>
</dl>
<%= link_to 'Edit profile', edit_admin_user_path(@user), :class => 'btn btn-primary' %>
<%= link_to 'Change Password', admin_users_edit_password_path(id: @user.id), :class => 'btn btn-primary' %>
<br />
