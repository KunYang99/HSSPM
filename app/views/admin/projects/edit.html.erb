<div class="page-header">
  <h3><i class='glyphicon glyphicon-plus'></i> Edit project</h3>
</div>
<%= simple_form_for([:admin,@project]) do |f| %>
  <%= f.input :name, :input_html => { :class => :wd300 } %>
  <%= f.input :PI, :input_html => { :class => :wd300 }, :label => 'Leader' %>
  <%= f.input :members, :input_html => { :class => :wd300 } %>
  <%= f.input :progress, :input_html => { :class => :wd300 }, :hint => 'Percentage of completion, 0-100' %>
  <%= f.input :description, :input_html => { :class => :wd300 } %>
  <%= recaptcha_tags %><br>

  <%= f.button :submit, :class => 'btn btn-primary' %>
<% end %>
