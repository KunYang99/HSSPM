<div class="page-header">
  <h3><i class='glyphicon glyphicon-object-align-bottom'></i> Cohorts</h3>
  <p>Control access privileges</p>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>

    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.note %></td>
        <td><%= link_to edit_admin_cohort_path(cohort.id) do %><span class='glyphicon glyphicon-pencil'></span><% end %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Add new cohort', new_admin_cohort_path, :class => 'btn btn-primary' %>
