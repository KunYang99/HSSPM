<div class="page-header">
  <h3><i class='glyphicon glyphicon-time'></i> Sample Types</h3>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>

    <% @sample_types.each do |sample_type| %>
      <tr>
        <td><%= sample_type.name %></td>
        <td><%= sample_type.note %></td>
        <td><%= link_to edit_admin_sample_type_path(sample_type.id) do %><span class='glyphicon glyphicon-pencil'></span><% end %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Add new sample type', new_admin_sample_type_path, :class => 'btn btn-primary' %>
