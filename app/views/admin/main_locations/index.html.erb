<div class="page-header">
  <h3><i class='glyphicon glyphicon-map-marker'></i> Main Location</h3>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Note</th>
      <th>&nbsp;</th>
    </tr>

    <% @main_locations.each do |main_location| %>
      <tr>
        <td><%= main_location.name %></td>
        <td><%= main_location.location %></td>
        <td><%= main_location.note %></td>
        <td><%= link_to edit_admin_main_location_path(main_location.id) do %><span class='glyphicon glyphicon-pencil'></span><% end %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Add main location', new_admin_main_location_path, :class => 'btn btn-primary' %>
