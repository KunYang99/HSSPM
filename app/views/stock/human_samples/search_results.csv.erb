<%= CSV.generate do |csv|

  csv << ['Sample ID', 'Type', 'Subject ID', 'Visit Type', 'Original Amount', 'Available Amount', 'Concentration', 'Main Location', 'Sub Location', 'Source', 'Prepared_by', 'Created_on', 'Note']

  @samples.each do |s|
    new_row = []
    new_row << s.accession
    new_row << s.sample_type.name
    new_row << s.human.accession
    new_row << s.visit_type.value
    new_row << s.amount
    new_row << s.avail_amount
    new_row << s.concentration
    new_row << s.main_location
    new_row << s.sub_location
    new_row << s.source
    new_row << s.prepared_by
    new_row << s.created_on
    new_row << s.note
    csv << new_row
  end

end.html_safe %>
