<div class="header-blue">
  <h3><i class='glyphicon glyphicon-filter'></i> <%= @sample_type.to_desc %></h3>
</div>

<div class="panel panel-info">
  <div class="panel-heading"><b>Summary</b></div>
  <table class="table table-bordered table-striped table-condensed">
    <tr>
      <th>#Samples</th>
      <th>#Subjects</th>
      <th>Main Locations</th>
    </tr>
    <tr>
      <td><%= @samples.count %></td>
      <td><%= @human_cnt %></td>
      <td><%= @main_loc.join('; ') %></td>
    </tr>
  </table>
</div>

<hr>
<div id='input-box'>
  <%= form_for_filterrific @filterrific do |f| %>
    Search <%= f.text_field :search_query, class: 'filterrific-periodically-observed' %>
  &nbsp;&nbsp;&nbsp;Main Location <%= f.select :with_location, @filterrific.select_options[:with_location], {include_blank: '- Any -'} %>
&nbsp;&nbsp;&nbsp;<%= link_to 'Reset filters', reset_filterrific_url %>
&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
<%= link_to stock_sample_type_path(format: "csv", :id => @sample_type.id) do %><i class='glyphicon glyphicon-download-alt'></i> Download samples<% end %>
<% end %>
</div>

<br />
<%= render partial: "list", locals: {sample_list: @human_samples } %> 

